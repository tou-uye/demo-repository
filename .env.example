# Scheduled collect (default: daily 08:00)
COLLECT_CRON=0 0 8 * * ?
# Max reports generated per run (avoid long runs)
COLLECT_MAX_ANALYZE=20
# Max messages attempted per run (avoid huge backlog runs)
COLLECT_MAX_ATTEMPT=50

# Scheduled snapshot (default: daily 08:05)
SNAPSHOT_CRON=0 5 8 * * ?

# HTTP timeouts (ms)
HTTP_CONNECT_TIMEOUT_MS=3000
HTTP_READ_TIMEOUT_MS=15000

# Data sources (RSS recommended; CoinGecko may timeout depending on network)
COINGECKO_ENABLED=false
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
